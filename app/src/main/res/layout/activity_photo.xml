<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_ciel_etoile"
    tools:context=".PhotoActivity">

    <EditText
        android:id="@+id/activite_photo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du niveau : "
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <TextView
        android:id="@+id/activity_photo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activite_photo_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#4068f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/activity_photo.enregistrerBouton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickEnregistrer"
                    android:text="Enregistrer"
                    android:background="@drawable/bouton1"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/activite_photo_prendreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickPrendrePhoto"
                    android:text="Prendre \n photo"
                    android:background="@drawable/bouton1"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/activity_photo_annulerBouton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClickAnnuler"
                    android:text="Annuler"
                    android:background="@drawable/bouton1"
                    android:layout_weight="1"
                    />

            </TableRow>

        </TableLayout>


    </LinearLayout>


</RelativeLayout>