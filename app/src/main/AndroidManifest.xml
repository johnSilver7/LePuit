        </activity>
        <activity
            android:name=".FiniActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".HistoriqueActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".JeuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ParametreActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PauseActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PhotoActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SalonActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>
